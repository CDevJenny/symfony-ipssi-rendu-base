{% extends 'base.html.twig' %}

{% block title %}Admin- Categories
{% endblock %}

{% block body %}
	<h1>Category index</h1>

	<a href="{{ path('app_admin_category_create') }}">Create new</a>

	<table class="categories">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.name }}</td>
					<td>
						<a href="{{ path('app_admin_category_show', {'id': category.id}) }}">show</a>
						<a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
