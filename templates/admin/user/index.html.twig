{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>
	<a href="{{ path('app_admin_user_create') }}">Create new</a>

	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Name</th>
				<th>FirstName</th>
				<th>IsActive</th>
				<th>CreatedAt</th>
				<th>UpdatedAt</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.name }}</td>
					<td>{{ user.firstName }}</td>
					<td>{{ user.isActive ? 'Yes' : 'No' }}</td>
					<td>{{ user.createdAt }}</td>
					<td>{{ user.updatedAt }}</td>
					<td>
						<a href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a>
						<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
